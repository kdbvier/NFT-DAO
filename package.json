  "scripts": {
    "build": "rollup -c",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --network mumbai --tags",
    "verify": "hardhat verify --network goerli --constructor-args",
    "verify:contract": "yarn verify",
    "deploy:forwarder": "yarn deploy Forwarder",
    "deploy:decir": "yarn deploy DecirProxy",
    "deploy:proxyFactory": "yarn deploy ProxyFactory",
    "deploy:DAO": "yarn deploy DAO",
    "deploy:Collection": "yarn deploy ERC721NFTCustom",
    "deploy:MCollection": "yarn deploy MembershipCollection",
    "deploy:Splitter": "yarn deploy RoyaltySplitter",
    "createRelay": "node scripts/createRelay.js",
    "create-autotask": "yarn build && node scripts/createAutotask.js",
    "upload-autotask": "node scripts/uploadAutotask.js",
    "sign-dao": "hardhat run scripts/dao/sign-dao.js --network mumbai",
    "sign-dao-treasury": "hardhat run scripts/dao/sign-dao-treasury.js --network mumbai",
    "sign-collection": "hardhat run --network mumbai scripts/collection/sign-collection.js",
    "sign-m-collection": "hardhat run --network mumbai scripts/membership/sign-collection.js",
    "sign-merkle": "hardhat run --network mumbai scripts/collection/sign-merkle-root.js",
    "sign-mint-price": "hardhat run --network mumbai scripts/collection/sign-mint-price.js",
    "run-mint": "hardhat run --network mumbai scripts/collection/sign-mint-token.js",
    "sign-metadata": "hardhat run --network mumbai scripts/collection/sign-update-metadata.js",
    "sign-royalty": "hardhat run --network mumbai scripts/collection/sign-royalty.js",
    "sign-splitter": "hardhat run --network mumbai scripts/royalty/sign-splitter.js ",
    "sign-royalty-claim": "hardhat run --network mumbai scripts/royalty/sign-claim.js",
    "sign-tier": "hardhat run --network mumbai scripts/membership/sign-tier.js",
    "sign-mint-member": "hardhat run --network mumbai scripts/membership/sign-mint.js",
    "sign-withdraw-member": "hardhat run --network mumbai scripts/membership/sign-withdraw.js",
    "sign-withdraw-collection": "hardhat run --network mumbai scripts/collection/sign-withdraw.js",
    "get-fee": "hardhat run --network mumbai scripts/discount/sales-fees.js",
    "check-discount": "hardhat run --network mumbai scripts/discount/check-discount.js",
    "test": "hardhat test"
  },
